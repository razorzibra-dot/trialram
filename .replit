modules = ["nodejs-20", "web", "bash"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run dev -- --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41081
externalPort = 3001

[[ports]]
localPort = 42295
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "build", "&&", "npm", "run", "preview"]
build = ["npm", "run", "build"]
